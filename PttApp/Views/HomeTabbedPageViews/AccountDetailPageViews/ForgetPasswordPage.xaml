<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PttApp.Views.HomeTabbedPageViews.AccountDetailPageViews.ForgetPasswordPage"
              NavigationPage.IconColor="Black">
    <NavigationPage.TitleView>
        <Grid>
            <Image Source="ptt.png" BackgroundColor="White" Margin="15,0,40,0" WidthRequest="200"/>
        </Grid>
    </NavigationPage.TitleView>
    <StackLayout>
        <Label Text="Şifremi Unuttum" TextColor="Black" FontSize="20" FontAttributes="Bold" Padding="10,0,0,0"></Label>
        <Frame BorderColor="Gray"
                   CornerRadius="1"
                   Padding="15,2,2,2"
                   Margin="10,10,10,10">
            <Entry Margin="10,0" Placeholder="E-Posta Adresi" ></Entry>
        </Frame>
        <Button Text="Şifremi Yenile"
                Margin="10,10"
                BorderRadius="20"
                Command="{Binding SaveNoteCommand}"
                BackgroundColor="#1a73e8"
                TextColor="White" />
    </StackLayout>
</ContentPage>